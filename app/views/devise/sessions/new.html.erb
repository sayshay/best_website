<%= render 'layouts/header' %>
<section class="user-wrapper">
  <div class="user-login container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <h2 class="user-login__title">Welcome Back!</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.text_field :email, placeholder: 'Email', required: true,
                  class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, placeholder: 'Password', required: true,
                  class: 'form-control' %>
              </div>
              <div class="action">
                <%= f.submit "Log In",
                  class: 'btn--kf-blue' %>
              </div>
            <% end %>

            <div class="user-login__h-ruler"><span>OR</span></div>

            <div class='text-center'>
              <%= link_to user_omniauth_authorize_path(:facebook), class: "btn--facebook" do %>
                <i class="fa fa-facebook"></i>
                Facebook
              <% end %>
              <%= link_to user_omniauth_authorize_path(:google_oauth2), class: "btn--google" do %>
                <i class="fa fa-google-plus"></i>
                Google
              <% end %>
              <%= link_to user_omniauth_authorize_path(:twitter), class: "btn--twitter" do %>
                <i class="fa fa-twitter"></i>
                Twitter
              <% end %>
            </div>

            <div class="actions">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Don't have an account?", new_registration_path(resource_name) %>
              <% end -%>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              <% end -%>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/footer' %>
